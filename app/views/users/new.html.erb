<h1>New User</h1>
<div class="well">
  <div class="row">
    <%= form_for @user, url: users_path, class: 'form-horizontal' do |f| %>
      <div class="form-group">
        <%= f.label :first_name, class: "control-label col-md-3"%>
        <div class="col-md-9">
        <%= f.text_field :first_name, class: "form-control"%>
        </div>
      </div>
      <br>
      <br>
      <br>
      <div class="form-group">
        <%= f.label :last_name, class: "control-label col-md-3"%>
        <div class="col-md-9">
        <%= f.text_field :last_name, class: "form-control"%>
        </div>
      </div>
      <br>
      <br>  
      <div class="form-group">
        <%= f.label :id_card, class: "control-label col-md-3"%>
        <div class="col-md-9">
        <%= f.text_field :id_card, class: "form-control"%>
        </div>
      </div>
      <br>
      <br>
      <div class="form-group">
        <%= f.label :mobile, class: "control-label col-md-3"%>
        <div class="col-md-9">
        <%= f.text_field :mobile, class: "form-control"%>
        </div>
      </div>
      <br>
      <br>
      <div class="form-group">
        <%= f.label :email, class: "control-label col-md-3"%>
        <div class="col-md-9">
        <%= f.text_field :email, class: "form-control"%>
        </div> 
      </div>
      <br>
      <br>
      <div class="form-group">
        <%= f.label :company, class: "control-label col-md-3"%>
        <div class="col-md-9">
        <%= f.text_field :company, class: "form-control"%>
        </div>
      </div>
      <br>
      <br>
      <div class="btn-group pull-right">
        <br>
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to 'Back', :back, class: "btn btn-warning"%>
      </div>
    <% end %>
  </div>
</div>


