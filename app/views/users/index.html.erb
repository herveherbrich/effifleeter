<div class="row">
	<h1 class="text-center"><span class="title-sections">&nbsp;&nbsp;Users&nbsp;&nbsp;</span></h1>
</div>
<div class="row cars">
	<div class="col-md-6 col-md-offset-3">
		<ul class="list-group">
			<% @users.each do |user| %>
				<li class="list-group-item"><%= user.first_name %>
					<%= user.last_name %>
					&nbsp; | &nbsp;
					<%= user.company %>
					<div class="pull-right">
					<%= link_to "User Details", user_path(user), method: :get, class: "btn btn-primary btn-xs"%>
					&nbsp;  &nbsp;
					<%= link_to "Delete User", user_path(user), method: :delete, class: "btn btn-danger btn-xs"%>
					</div>
					<br>
				</li>
				<br>
			<% end %>
		</ul>		
		<%= link_to 'Back to home', admin_path(current_admin), class: "btn btn-warning pull-left" %>
		<%= link_to "New User", new_user_path, method: :get, class: "btn btn-warning pull-right" %>
  </div>
 </div	
