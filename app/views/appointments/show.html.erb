<h1>Appointments Details</h1>	
<div class="row">
	<div class="col-md-4">
		<%= image_tag "car.jpg", class: 'image-car' %>
	</div>
	<div class="col-md-4 col-md-offset-1">
		<ul class="list-group cars-show">
			<li class="list-group-item">Tag : &nbsp;<%= @car.tag %></li>
			<li class="list-group-item">Brand : &nbsp;<%= @car.brand %></li>
			<li class="list-group-item">Model : &nbsp;<%= @car.model %></li>
			<li class="list-group-item">Start time : &nbsp;<%= @appointment.start_time.strftime('%Y-%m-%d') %></li>
			<li class="list-group-item">End time : &nbsp;<%= @appointment.end_time.strftime('%Y-%m-%d') %></li>
			<li class="list-group-item">First name : &nbsp;<%= @user.first_name %></li>
			<li class="list-group-item">Last name : &nbsp;<%= @user.last_name %></li>
			<li class="list-group-item">Mobile : &nbsp;<%= @user.mobile %></li>
			<li class="list-group-item">Company : &nbsp;<%= @user.company %></li>

		</ul>	
	</div>
</div>
<br>
<br>
<br>
<br>
<%= link_to 'Back to Appointments', appointments_path, method: :get, class: "btn btn-warning btn-xs"%>
<%= link_to "Delete Appointment", appointment_path(@appointment), method: :delete, class: "btn btn-danger btn-xs" %>
